DB_HOST=db
DB_NAME=blog
DB_USER=user
DB_PASS=pass
MYSQL_ROOT_PASSWORD=root
PHP_FPM_PORT=9000

# Optional overrides
#NGINX_PORT=8000

# Logging (Monolog / PSR-3)
# LOG_LEVEL can be: DEBUG, INFO, NOTICE, WARNING, ERROR, CRITICAL, ALERT, EMERGENCY
# Default: DEBUG
LOG_LEVEL=DEBUG

# LOG_DESTINATION supports: stdout, stderr, file:/absolute/path/to/log.txt or an explicit file path
# Examples:
# LOG_DESTINATION=stdout
# LOG_DESTINATION=stderr
# LOG_DESTINATION=file:/var/log/myapp.log
LOG_DESTINATION=stdout
